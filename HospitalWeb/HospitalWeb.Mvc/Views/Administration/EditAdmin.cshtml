@model AdminViewModel
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewBag.Title = Localizer["Title"];
}

<h2>@Localizer["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Administration" asp-action="EditAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control input-validation-error" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control input-validation-error" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control input-validation-error" type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control input-validation-error" type="tel"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <input asp-for="IsSuperAdmin" type="checkbox"/>
                <label asp-for="IsSuperAdmin" class="control-label"></label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">@SharedLocalizer["Update"]</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Administration" asp-action="Admins">@SharedLocalizer["BackToFullList"]</a>
</div>