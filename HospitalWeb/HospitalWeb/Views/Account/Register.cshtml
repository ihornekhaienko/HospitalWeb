@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_AccountLayout";
}

<div class="row mt-5">
    <div class="col-lg-4 bg-white m-auto">
        <h2 class="text-center pt-3">Signup Now</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
        <form method="post" asp-controller="Account" asp-action="Register" asp-antiforgery="true">
            <div class="mb-3">
                <div class="input-group ">
                    <span class="input-group-text">
                        <i class="fa fa-user"></i>
                    </span>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Name"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-user"></i>
                    </span>
                    <input type="text" asp-for="Surname" class="form-control" placeholder="Surname"/>
                </div>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-envelope"></i>
                    </span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email"/>                
                </div>
                <span asp-validation-for="Email" class="validator text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password"/>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group ">
                     <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password"/>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group ">
                    <span class="input-group-text">
                        <i class="fa fa-phone"></i>
                        <label style="margin-left:5px; width: 100px;">Phone number</label>
                    </span>
                    <input type="tel" asp-for="Phone" class="form-control"/>
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                     <span class="input-group-text">
                        <i class="fa fa-calendar-days"></i>
                        <label style="margin-left:5px; width: 100px;">Date of birth</label>
                    </span>
                    <input type="date" asp-for="BirthDate" class="form-control"/>
                </div>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-location-dot"></i>
                    </span>
                    <input type="text" asp-for="Locality" class="form-control" placeholder="Locality"/>
                </div>
                <span asp-validation-for="Locality" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-city"></i>
                    </span>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Address"/>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="input-group mb-3">
                <div class="form-check form-check-inline">
                    <h6 class="mb-2 pb-1">Sex: </h6>
                </div>

                <div class="form-check form-check-inline">
                        <input asp-for="Sex" class="form-check-input" type="radio" value="male" name="sex" checked />
                        <label class="form-check-label">Male</label>
                </div>

                <div class="form-check form-check-inline">
                    <input asp-for="Sex" class="form-check-input" type="radio" name="sex" value="female" />
                    <label class="form-check-label">Female</label>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Sign Up</button>
            </div>
        </form>

    </div>
</div>