@model ChangePasswordViewModel
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewBag.Title = SharedLocalizer["ChangePassword"];
    Layout = "_AccountLayout";
}

<div class="row mt-5">
    <div class="col-lg-4 bg-white m-auto">
        <h2 class="text-center pt-3">@SharedLocalizer["ChangePassword"]</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 

        <form method="post" asp-controller="Manage" asp-action="ChangePassword" asp-antiforgery="true">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" asp-for="OldPassword" class="form-control input-validation-error" placeholder="@SharedLocalizer["OldPassword"]"/>
                </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" asp-for="NewPassword" class="form-control input-validation-error" placeholder="@SharedLocalizer["NewPassword"]"/>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control input-validation-error" placeholder="@SharedLocalizer["ConfirmPassword"]"/>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col text-center">
                        <a asp-controller="Account" asp-action="ForgotPassword">@SharedLocalizer["ForgotPassword"]</a>
                    </div>
                 </div>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">@SharedLocalizer["Update"]</button>
            </div>
        </form>
    </div>
 </div>