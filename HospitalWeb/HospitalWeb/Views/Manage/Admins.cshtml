@model AdminsViewModel
@{
    ViewBag.Title = "Administrators";
}

<h1>Administrators list</h1>
<p>
    <a asp-controller="Manage" asp-action="CreateAdmin">Create New</a>
</p>
<form method="get">
    <div class="mb-3">
        <label>Search: </label>
        <input name="searchString" value="@Model.FilterModel.SearchString" class="search-input" />
        <span class="input-group-btn input-space"><button type="submit" class="btn btn-success btn-sm">Search</button></span>
        <span class="input-group-btn input-space"><a asp-action="Admins"> Back to Full List</a></span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Admins"
                   asp-route-sortOrder="@(Model.SortModel.NameSort)"
                   asp-route-searchString="@(Model.FilterModel.SearchString)">
                   Name
                </a>
            </th>
            <th>
                <a asp-action="Admins"
                   asp-route-sortOrder="@(Model.SortModel.SurnameSort)"
                   asp-route-searchString="@(Model.FilterModel.SearchString)">
                   Surname
                </a>
            </th>
            <th>
                <a asp-action="Admins"
                   asp-route-sortOrder="@(Model.SortModel.EmailSort)"
                   asp-route-searchString="@(Model.FilterModel.SearchString)">
                   Email
                </a>
            </th>
            <th>
                <a asp-action="Admins"
                   asp-route-sortOrder="@(Model.SortModel.PhoneSort)"
                   asp-route-searchString="@(Model.FilterModel.SearchString)">
                   Phone
                </a>
            </th>
            <th>
                <a asp-action="Admins"
                   asp-route-sortOrder="@(Model.SortModel.LevelSort)"
                   asp-route-searchString="@(Model.FilterModel.SearchString)">
                   Level
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody> 
        @foreach(var admin in Model.Admins)
        {
            <tr>
                <td>
                    @admin.Name
                </td>
                <td>
                    @admin.Surname
                </td>
                <td>
                    @admin.Email
                </td>
                <td>
                    @admin.PhoneNumber
                </td>
                <td>
                    @if (admin.IsSuperAdmin)
                    {
                        <span>Super</span>
                    }
                    else
                    {
                        <span>Admin</span>
                    }
                </td>
                <td>
                    @if(ViewBag.CurrentAdmin.Id != admin.Id && !admin.IsSuperAdmin)
                    {
                        <span>
                            <a asp-action="EditAdmin" asp-route-id="@admin.Id">Edit</a> |
                            <a asp-action="DeleteAdmin" asp-route-id="@admin.Id">Delete</a>
                        </span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<page-link page-model="@(Model.PageModel)" page-action="Admins"
page-url-searchString="@(Model.FilterModel.SearchString)"
page-url-sortOrder="@(Model.SortModel.Current)"></page-link>